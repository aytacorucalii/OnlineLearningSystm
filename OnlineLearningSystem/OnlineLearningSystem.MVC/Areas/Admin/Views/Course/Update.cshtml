@model CourseUpdateDTO
@{
    SelectList teachers = ViewData["Teachers"] as SelectList;
}
<form class="container" method="POST" enctype="multipart/form-data">
    <h2 class="my-4">Update Course</h2>

    <div class="mb-3">
        <label class="form-label" asp-for="CourseName"></label>
        <input class="form-control" asp-for="CourseName" />
        <span class="text-danger" asp-validation-for="CourseName"></span>
    </div>

    <div class="mb-3">
        <label class="form-label" asp-for="Description"></label>
        <textarea class="form-control" asp-for="Description"></textarea>
        <span class="text-danger" asp-validation-for="Description"></span>
    </div>

    <div class="mb-3">
        <label class="form-label" asp-for="Price"></label>
        <input class="form-control" asp-for="Price" type="number" step="0.01" />
        <span class="text-danger" asp-validation-for="Price"></span>
    </div>

    <div class="mb-3">
        <label class="form-label" asp-for="Duration"></label>
        <select class="form-control" asp-for="Duration" asp-items="Html.GetEnumSelectList<CourseDuration>()">
            <option value="">Select Duration</option>
        </select>
        <span class="text-danger" asp-validation-for="Duration"></span>
    </div>

    <div class="mb-3">
        <label class="form-label" asp-for="Image">Upload Image</label>
        <input class="form-control" asp-for="Image" type="file" />
        <span class="text-danger" asp-validation-for="Image"></span>
    </div>
    <p class="text-danger text-center">@Html.ValidationMessage("CustomError")</p>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
