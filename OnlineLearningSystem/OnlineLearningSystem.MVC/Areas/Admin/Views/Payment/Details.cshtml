@model PaymentDTO

@{
    ViewData["Title"] = "Ödəniş Detalları";
}

<h1>Ödəniş Detalları</h1>

<div class="form-group">
    <label for="Amount">Məbləğ</label>
    <input type="number" class="form-control" id="Amount" value="@Model.Amount" readonly />
</div>

<div class="form-group">
    <label for="Currency">Valyuta</label>
    <input type="text" class="form-control" id="Currency" value="@Model.Currency" readonly />
</div>

<div class="form-group">
    <label for="Status">Status</label>
    <input type="text" class="form-control" id="Status" value="@Model.Status" readonly />
</div>

<div class="form-group">
    <label for="SuccessUrl">Uğurlu Url</label>
    <input type="url" class="form-control" id="SuccessUrl" value="@Model.SuccessUrl" readonly />
</div>

<div class="form-group">
    <label for="CancelUrl">Ləğv Edilmiş Url</label>
    <input type="url" class="form-control" id="CancelUrl" value="@Model.CancelUrl" readonly />
</div>

<a href="@Url.Action("Index")" class="btn btn-secondary mt-2">Geri</a>
