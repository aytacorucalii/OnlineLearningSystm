@model StatisticsDTO

@{
    ViewData["Title"] = "Admin Dashboard - Statistics";
}

<div class="container my-5">
    <div class="row">
        <div class="col-12">
            <h1 class="text-center mb-4">System Statistics</h1>
        </div>
    </div>

    @if (Model == null)
    {
        <div class="alert alert-warning text-center" role="alert">
            <strong>No statistics available at the moment.</strong>
        </div>
    }
    else
    {
        <div class="row">
            <div class="col-md-6">
                <div class="card mb-4 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Total Students</h5>
                        <p class="card-text display-4 text-primary">
                            @Model.StudentCount
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card mb-4 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Total Teachers</h5>
                        <p class="card-text display-4 text-success">
                            @Model.TeacherCount
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card mb-4 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Total Courses</h5>
                        <p class="card-text display-4 text-warning">
                            @Model.CourseCount
                        </p>
                    </div>
                </div>
            </div>
            <div class="col-md-6">
                <div class="card mb-4 shadow-sm">
                    <div class="card-body">
                        <h5 class="card-title">Active Programs</h5>
                        <p class="card-text display-4 text-danger">
                            6
                        </p>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
