@model TeacherCreateDTO
<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Add New Teacher</h6>
        </div>
        <div class="card-body">
            <form asp-action="Create" enctype="multipart/form-data" method="post">
                <div class="form-group">
                    <label asp-for="Name">Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Enter name" required />
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Surname">Surname</label>
                    <input asp-for="Surname" class="form-control" placeholder="Enter surname" required />
                    <span class="text-danger" asp-validation-for="Surname"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Subject">Subject</label>
                    <input asp-for="Subject" class="form-control" placeholder="Enter subject" required />
                    <span class="text-danger" asp-validation-for="Subject"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ExperienceYears">Years of Experience</label>
                    <input asp-for="ExperienceYears" class="form-control" type="number" min="0" required />
                    <span class="text-danger" asp-validation-for="ExperienceYears"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Salary">Salary</label>
                    <input asp-for="Salary" class="form-control" type="number" step="0.01" required />
                    <span class="text-danger" asp-validation-for="Salary"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Image">Upload Image</label>
                    <input asp-for="Image" class="form-control-file" type="file" />
                    <span class="text-danger" asp-validation-for="Image"></span>
                </div>

                <button type="submit" class="btn btn-primary">Add Teacher</button>
            </form>
        </div>
    </div>
</div>
