@model TeacherUpdateDTO

@{
    SelectList courses = ViewData["Courses"] as SelectList;
}

<div class="container-fluid">
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Müəllim Məlumatlarını Yenilə</h6>
        </div>
        <div class="card-body">
            <form asp-action="Update" enctype="multipart/form-data" method="post">
                <input type="hidden" asp-for="Id" />

                <div class="form-group">
                    <label asp-for="Name"></label>
                    <input asp-for="Name" class="form-control" />
                    <span class="text-danger" asp-validation-for="Name"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Surname"></label>
                    <input asp-for="Surname" class="form-control" />
                    <span class="text-danger" asp-validation-for="Surname"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Subject"></label>
                    <input asp-for="Subject" class="form-control" />
                    <span class="text-danger" asp-validation-for="Subject"></span>
                </div>

                <div class="form-group">
                    <label asp-for="ExperienceYears"></label>
                    <input asp-for="ExperienceYears" class="form-control" type="number" />
                    <span class="text-danger" asp-validation-for="ExperienceYears"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Salary"></label>
                    <input asp-for="Salary" class="form-control" type="number" step="0.01" />
                    <span class="text-danger" asp-validation-for="Salary"></span>
                </div>

                <div class="form-group">
                    <label>Hazırkı Şəkil</label><br />
                    @if (!string.IsNullOrEmpty(Model.ImgUrl))
                    {
                        <img src="@Model.ImgUrl" alt="Müəllim Şəkili" class="img-thumbnail" width="150" />
                    }
                </div>

                <div class="form-group">
                    <label asp-for="Image">Yeni Şəkil (optional)</label>
                    <input asp-for="Image" class="form-control-file" type="file" />
                    <span class="text-danger" asp-validation-for="Image"></span>
                </div>

                <button type="submit" class="btn btn-success">Yenilə</button>
            </form>
        </div>
    </div>
</div>
