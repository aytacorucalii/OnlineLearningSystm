<!-- Modal for Searching Courses -->
<div class="modal fade" id="searchModal" tabindex="-1" role="dialog" aria-labelledby="searchModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="searchModalLabel">Search Courses</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form id="searchForm" method="get">
                    <input type="text" name="searchTerm" placeholder="Search courses..." class="form-control">
                    <button type="submit" class="btn btn-primary mt-3">Search</button>
                </form>

                <table class="table mt-3">
                    <thead>
                        <tr>
                            <th>Course Name</th>
                            <th>Description</th>
                            <th>Teacher</th>
                        </tr>
                    </thead>
                    <tbody id="courseResults">
                        <!-- Results will be added here -->
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script>
    // When the search icon is clicked, open the modal
    document.querySelector('.fa-magnifying-glass').addEventListener('click', function () {
        $('#searchModal').modal('show');
    });
</script>
